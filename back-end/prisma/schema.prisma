// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model gamemode{
  id Int @id @default(autoincrement())
  name String
  hearts hearts[]
  game game[]
  playerData playerData[]
}

model hearts{
  modeId Int
  mode gamemode @relation(fields: [modeId], references: [id])
  id Int @id @default(autoincrement())
  name String
  img String
  @@unique([modeId,id])
}

model difficulty{
  id Int @id @default(autoincrement())
  name String
  game game[]
}

model game{
  modeId Int
  mode gamemode @relation(fields: [modeId], references: [id])
  difficultyId Int
  difficulty difficulty @relation(fields: [difficultyId], references: [id])
  id Int @id @default(autoincrement())
  gameSettings gameSettings[]
  @@unique([modeId,difficultyId])
}

model gameSettings{
  gameId Int
  game game  @relation(fields: [gameId], references: [id])
  miniId Int
  mini minigame @relation(fields: [miniId], references: [id])
  tries Int
  multiplier Float?
  @@id([gameId,miniId])
}

model minigame{
  id Int @id @default(autoincrement())
  name String @unique
  description String
  icon String
  logo String
  background String
  border String
  gameSettings gameSettings[]
  solutions solutions[]
  player player[]
  }

model solutions{
  miniId Int
  mini minigame @relation(fields: [miniId], references: [id])
  id Int @id @default(autoincrement())
  answer String
  img String
  @@unique([miniId,id])
}

model user{
  Id String @id @default(uuid())
  email String @unique
  name String
  password String
  player player[]
  auth Boolean
  passcode String?
  icon String?
  background_img String?
  typeId Int
  type userType @relation(fields: [typeId], references: [id])
}

model userType{
  id Int @id @default(autoincrement())
  name String
  user user[]
}

model player{
  userEmail String
  user user @relation(fields: [userEmail], references: [email])
  miniId Int
  mini minigame @relation(fields: [miniId], references: [id])
  id Int @id @default(autoincrement())
  playerData playerData[]
  @@unique([userEmail,miniId])

}

model playerData{
  playerId Int
  player player @relation(fields: [playerId], references: [id])
  modeId Int
  mode gamemode @relation(fields: [modeId], references: [id])
  points Int
  @@id([playerId,modeId])
}
